<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_radius"
    android:layout_marginStart="@dimen/cardview_movie_img_width">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/visions_img_movie"
            android:layout_width="@dimen/height_210"
            android:layout_height="@dimen/dimen_300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/visions_movie_linear"
            android:layout_width="@dimen/linearlayout_width"
            android:layout_height="@dimen/linearlayout_height"
            android:layout_marginStart="@dimen/activity_splash_txt_we_padding_start"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/visions_img_movie"
            android:textStyle="bold">

            <ImageView
                android:id="@+id/visions_vote_img"
                android:layout_width="@dimen/vote_img_width"
                android:layout_height="@dimen/vote_img_height"
                android:layout_marginTop="@dimen/margin_top_bottom_start"
                android:src="@drawable/ic_star"
                android:layout_marginStart="@dimen/text_margin_start_end"/>

            <TextView
                android:id="@+id/visions_txt_vote"
                android:layout_width="@dimen/vote_txt_width"
                android:layout_height="@dimen/vote_img_height"
                android:layout_marginStart="@dimen/margin_top_bottom_start"
                android:layout_marginTop="@dimen/margin_top_bottom_start"
                style="@style/Bold_White_10" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/linear_layout_height_42"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/visions_movie_linear"
            app:layout_constraintStart_toStartOf="@id/visions_movie_linear"
            android:layout_marginTop="@dimen/margin_8">

        <TextView
            android:id="@+id/visions_movie_txt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_txt_height_margin_top"
            style="@style/Black_20"/>

        <TextView
            android:id="@+id/visions_txt_genre"
            android:layout_width="@dimen/txt_height_width"
            android:layout_height="@dimen/title_txt_height_margin_top"
            style="@style/Text_Size_15"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

