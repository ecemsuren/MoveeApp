<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_txt_date_margin_top"
    app:cardCornerRadius="@dimen/cardview_radius">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

        <ImageView
            android:id="@+id/cast_details_img_people_movie"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_150dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/cast_details_txt_people_movie"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/rcy_txt_height_30"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_8"
            style="@style/Text_Size_12"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>